{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.*", 
    "src/**/*.spec.*",
    "src/main.tsx",
    "src/App.tsx"
  ]
}
